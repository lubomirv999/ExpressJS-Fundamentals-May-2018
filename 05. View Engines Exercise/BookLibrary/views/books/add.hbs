<div class="error">
    {{error}}
</div>

<form method="POST">
    <div>
        Title:
        <input type="text" name="title" value="{{title}}" />
    </div>

    <div>
        Author:
        <input type="text" name="author" value="{{author}}" />
    </div>

    <div>
        Release Date:
        <input type="date" name="releaseDate" value="{{releaseDate}}" />
    </div>

    <div>
        Image URL
        <input type="url" name="imageUrl" value="{{imageUrl}}" />
    </div>

    <br />
    <input type="submit" />
</form>