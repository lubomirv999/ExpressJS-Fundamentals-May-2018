<h1>Order details</h1>
<div class="catalog">
    <div class="column">
        <img src="{{order.product.url}}">
    </div>
    <div class="column">
        <h2>{{order.product.fullName}}</h2>
        <h3>From {{order.date}}</h3>
        <div class="toppings">
            {{#each order.product.toppings}}
            <p>{{this}}</p>
            {{else}}
                <p>No toppings</p>
            {{/each}}    
        </div>
    </div>
    <div class="status">
        <div class="status-block">
            <span class="progress-right"></span>
            <span class="checkpoint  {{#if isPending}} current {{/if}}"></span>
            <br> Pending
        </div>
        <div class="status-block">
            <span class="progress-left"></span>
            <span class="progress-right"></span>
            <span class="checkpoint {{#if isInProgress}} current {{/if}}"></span>
            <br> In progress
        </div>
        <div class="status-block">
            <span class="progress-left"></span>
            <span class="progress-right"></span>
            <span class="checkpoint {{#if isInTransit}} current {{/if}}" ></span>
            <br> In transit
        </div>
        <div class="status-block">
            <span class="progress-left"></span>
            <span class="checkpoint {{#if isDelivered}} current {{/if}}"></span>
            <br> Delivered
        </div>
    </div>
</div>